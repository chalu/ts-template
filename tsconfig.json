{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/@types"],
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "./src/**/*.ts"
  ]
}